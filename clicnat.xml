<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.0.0" method="upgrade">
    <name>Clicnat</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>2014</creationDate>
    <author>Nicolas Damiens</author>
    <authorEmail>nicolas@damiens.info</authorEmail>
    <copyright></copyright>
    <license>GPL 2</license>
    <!--  The version string is stored in the components table -->
    <version>0.0.1</version>
    <!-- The description is optional and defaults to the name -->
    <description>Clicnat interface.</description>

    <!-- Note the folder attribute: This attribute describes the folder
        to copy FROM in the package to install therefore files copied
        in this section are copied from "site/" in the package -->
    <files folder="site">
        <filename>index.html</filename>
        <filename>clicnat.php</filename>
        <filename>controller.php</filename>
        <!-- <folder>views</folder> -->
    </files>

    <administration>
        <menu>Clicnat</menu>
        <!-- Note the folder attribute: This attribute describes the folder
            to copy FROM in the package to install therefore files copied
            in this section are copied from "admin/" in the package -->
        <files folder="admin">
            <filename>index.html</filename>
            <filename>clicnat.php</filename>
        </files>
    </administration>
</extension>

